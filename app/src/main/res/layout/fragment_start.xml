<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/where_you_at_bg1_tall">

    <TextView
            android:id="@+id/titletext"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/dog_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:text="@string/start_screen_main_text"
            android:textSize="45sp"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/casual"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="true" />

    <RelativeLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp">

        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:translationZ="200dp" />

        <TableLayout
                android:id="@+id/topRow"
                android:layout_alignParentTop="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        tools:ignore="UselessLeaf">

                    <!-- put views in here, bitch -->

                </FrameLayout>

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <Button
                            android:id="@+id/btnCreate"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:contentDescription="@string/refresh"
                            android:text="@string/create_button"
                            android:background="@drawable/btn_glass_navy_border"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/casual"
                            android:textStyle="bold"
                            android:textSize="32sp"
                            android:textColor="@android:color/holo_red_dark" />
                </FrameLayout>
            </TableRow>
        </TableLayout>

        <TableLayout
                android:id="@+id/middleRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topRow">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <FrameLayout
                        android:id="@+id/cell_tripcode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical">

                    <EditText
                            android:id="@+id/edittext_trip_code"
                            android:hint="@string/enter_tripcode_hint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="10dp"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/calculator"
                            android:inputType="textCapCharacters"
                            android:maxLength="5" />

                </FrameLayout>

                <FrameLayout
                        android:id="@+id/cell_joinbutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <Button
                            android:id="@+id/btnJoin"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:contentDescription="@string/refresh"
                            android:layout_margin="10dp"
                            android:text="@string/join_existing_button"
                            android:background="@drawable/btn_glass_navy_border"
                            android:fontFamily="@font/casual"
                            android:textStyle="bold"
                            android:textSize="32sp"
                            android:textColor="@android:color/holo_red_dark" />
                </FrameLayout>
            </TableRow>
        </TableLayout>

        <TableLayout
                android:id="@+id/bottomRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/middleRow">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0">

                    <!-- put views here -->

                </FrameLayout>

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <Button
                            android:id="@+id/btnResume"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/refresh"
                            android:text="@string/resume_button"
                            android:background="@drawable/btn_glass_navy_border"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/casual"
                            android:textStyle="bold"
                            android:textSize="32sp"
                            android:textColor="@android:color/holo_red_dark" />
                </FrameLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>